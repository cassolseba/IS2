.py-5
  .container      
    .row
      .col-md-12
        .card.text-white.p-5.bg-primary.text-left
          .card-body
            h1.mb-4 Registrazione al servizio
            |                             
            form(action='/test/registrazione', method="POST")
              .form-group
                label Nome
                |                                     
                input.form-control(type='text', placeholder='Inserisci il tuo nome', name="nome" required)
              |                                 
              .form-group
                label Cognome
                |                                     
                input.form-control(type='text', placeholder='Inserisci il tuo cognome', name="cognome" required)
              |                                 
              .form-group
                label Email universitaria
                |                                     
                input.form-control(type='email', placeholder='nome.cognome@studenti.unitn.it', name="email" required)
              |                                 
              .form-group
                label Password
                |                                     
                input.form-control(type='password', placeholder='Inserisci la password', name="password" required)
              |
              .form-group
                label Conferma Password
                |                                     
                input.form-control(type='password', placeholder='Conferma la password inserita', name="confpassword" required)
              |                                 
              button.btn.btn-secondary(type='submit') Registrati
        |                     
        .col-md-12  

