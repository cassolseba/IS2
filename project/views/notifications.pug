|     
.py-3
  .container
    .row
      .col-md-12
        .row
          .col-md-8
            h1 Messaggi ricevuti:
            - var readed = false;
            - var toRead = false;
            each message in messages
              if (!message.recived)
                if (!toRead)
                  br
                  h3 Messaggi non letti:
                  - toRead = true;
                .py-3
                  .container
                    .row
                      .col-md-12
                        .card               
                          .card-body
                            h5 Notifica relativa all'annuncio #{message.post} effettuata da #{message.sender} nNot=#{nNotifications}
                            |                         
                            p.p-y-1 Puoi ricontattarlo al seguente indirizzo: #{message.contact}
                if (nNotifications==1)
                  form(method='POST', action='/setMessagesReaded')
                    .form-group
                      |
                      button.btn.btn-primary(type='submit') Segna tutti i messaggi come letti
                else
                  - nNotifications--;
              else
                if (!readed)
                  h3 Messaggi gi√† letti:
                  - readed = true;
                .py-3
                  .container
                    .row
                      .col-md-12
                        .card               
                          .card-body
                            h5 Notifica relativa all'annuncio #{message.post} effettuata da #{message.sender}
                            |                         
                            p.p-y-1 Puoi ricontattarlo al seguente indirizzo #{message.contact}
            if (!readed && !toRead)
              h3 Nessun messaggio da visualizzare
              .py-3
                .container
                  .row
                    .col-md-12
                      
                      br
                      br

            
    |             
    .row
      .col-md-12

