.py-5
  .container
    .row
      .col-md-3
      |                 
      .col-md-6
        .card.text-white.p-5.bg-primary
          .card-body
            h1.mb-4 Aggiungi recensione
            |                             
            form(method='POST' action='/recensione')
              .form-group                
                legend Voto
                |  1
                |                                     
                input(type='radio', name='r', value='1')
                |  2
                |                                     
                input(type='radio', name='r', value='2')
                |  3
                |                                     
                input(type='radio', name='r', value='3')
                |  4
                |                                     
                input(type='radio', name='r', value='4')
                |  5
                |                                     
                input(type='radio', name='r', value='5')
              |                                 
              div
                textarea.w-100(rows='5', placeholder='Testo della recensione', name='text')
                |
                input.form-control(type='hidden' value=utente name='utente')
              |                                 
              button.btn.btn-primary(type='submit') Recensisci
|     
