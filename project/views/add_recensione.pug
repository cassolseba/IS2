doctype html
head
  meta(charset='utf-8')
  |     
  meta(name='viewport', content='width=device-width, initial-scale=1')
  |     
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css', type='text/css')
  |     
  link(rel='stylesheet', href='https://pingendo.com/assets/bootstrap/bootstrap-4.0.0-beta.1.css', type='text/css')
include includes/navbar.pug
.py-5
  .container
    .row
      .col-md-3
      |             
      .col-md-6
        .card.text-white.p-5.bg-primary
          .card-body
            h1.mb-4 Aggiungi recensione
            |                             
            form(method='POST' action='/recensione')
              .form-group                
                legend Voto
                .form-check.form-check-inline
                  label.form-check-label
                    input.form-check-input(type="radio", name='r', value='1' required)
                    p 1
                .form-check.form-check-inline
                  label.form-check-label
                    input.form-check-input(type="radio", name='r', value='2')
                    p 2
                .form-check.form-check-inline
                  label.form-check-label
                    input.form-check-input(type="radio", name='r', value='3')
                    p 3
                .form-check.form-check-inline
                  label.form-check-label
                    input.form-check-input(type="radio", name='r', value='4')
                    p 4
                .form-check.form-check-inline
                  label.form-check-label
                    input.form-check-input(type="radio", name='r', value='5' )
                    p 5
              |                                 
              div
                textarea.w-100(rows='5', placeholder='Testo della recensione', name='text')
                |
                input.form-control(type='hidden' value=utente name='utente')
              |                   
              br              
              button.btn.btn-secondary(type='submit') Recensisci
|     
include includes/footer.pug

