.py-5
  .container
    .row
      .col-md-6
        h1 Gestione account
      |                 
      .col-md-6
        a.btn.btn-primary(href='') Home Page
|     
.py-5
  .container
    .row
      .col-md-6
        .row
          .col-md-12
            form(method='post', action='#')
              .form-group
                label Modifica numero di telefono
                |                                     
                input.form-control(type='text', name='new_telephone', placeholder='Nuovo numero', value=numero_telefono)
                |
                input.form-control(type="hidden", value="form-1", name="formid")
                |                                     
                button.btn.btn-primary.my-1(type='submit') Salva
            |                             
            form(method='post', action='#')
              .form-group
                //- var email;
                label Modifica email
                |                                                     
                input.form-control.my-1(type='email', name='new_email', placeholder='Inserisci la tua nuova mail', value=email)
                |
                input.form-control(type="hidden", value="form-2", name="formid")
                |                                     
                button.btn.btn-primary.my-1(type='submit') Salva
            |                             
            form(method='post', action='#')
              .form-group
                - var password;
                label.form-control-label Modifica password
                |                                     
                input.form-control(type='password', placeholder='Inserisci la tua vecchia password', name='old_password')
                |                                     
                input.form-control.my-1(type='password', placeholder='Inserisci la tua nuova password', name='new_password1')
                |                                     
                input.form-control.my-1(type='password', placeholder='Reinserisci la tua nuova password', name='new_password2')
                |
                input.form-control(type="hidden", value="form-3", name="formid")
                |                                     
                button.btn.btn-primary.my-1(type='submit') Salva
      |                 
      .col-md-6
        form(method='post', action='#')
          .form-group
            label Modifica la descrizione del tuo profilo
            |  
            textarea(rows='4', cols='50')=descrizione 
          |
          input.form-control(type="hidden", value="form-4", name="formid")
          |                         
          button.btn.btn-primary(type='submit') Aggiorna
        |
        br
        br
        br
        form(method='post', enctype='multipart/form-data', action='/upload')          
            .form-group
              label Aggiorna la tua immagine di profilo
              |
              input(type='file', name='file_upload')
              |
              input.form-control(type="hidden", value="form-7", name="formid")
              |     
              button.btn.btn-primary.my-1(type='submit') Carica
              |
  |         
  .py-5
    .container
      .row
        .col-md-6
          form(method='post', action='#')
            .form-group              
              label Aggiungi competenza
              |                                 
              input.form-control(type='text', name='competenza', placeholder='Inserisci un nuovo corso')
            |
            input.form-control(type="hidden", value="form-5", name="formid")
            |                             
            button.btn.btn-primary(type='submit') Aggiungi
          |                         
          .row
            .col-md-12  
        |                     
        .col-md-6
          form(method='post', action='#')
            .form-group
              label Rimuovi competenza 
              - var i=true;
              each val in skills.length ? skills:["Nessuna competenza"]
                .form-check
                  label.form-check-label
                    if i
                      input.form-check-input(type="radio", name="delskill", value=val, checked)
                      |    #{val}
                      - i=false
                    else
                      input.form-check-input(type="radio", name="delskill", value=val)
                      |    #{val}
            |
            input.form-control(type="hidden", value="form-6", name="formid")
            |
            button.btn.btn-primary(type='submit') Rimuovi
  |         
