.py-5
  .container
    .row
      .col-md-6
        h1 Gestione account
      |                 
      .col-md-6
        a.btn.btn-primary(href='') Home Page
|     
.py-5
  .container
    .row
      .col-md-6
        .row
          .col-md-12
            form(method='post', action='https://formspree.io/')
              .form-group
                label Modifica numero di telefono
                |                                     
                input.form-control(type='text', name='new_telephone', placeholder='Nuovo numero')
                |                                     
                button.btn.btn-primary.my-1(type='submit') Salva
            |                             
            form(method='post', action='https://formspree.io/')
              .form-group
                label Modifica email
                |                                     
                input.form-control(type='email', name='old_email', placeholder='Inserisci la tua vecchia mail')
                |                                     
                input.form-control.my-1(type='email', name='new_email', placeholder='Inserisci la tua nuova mail')
                |                                     
                button.btn.btn-primary.my-1(type='submit') Salva
            |                             
            form(method='post', action='https://formspree.io/')
              .form-group
                label.form-control-label Modifica password
                |                                     
                input.form-control(type='password', placeholder='Inserisci la tua vecchia password', name='old_password')
                |                                     
                input.form-control.my-1(type='password', placeholder='Inserisci la tua nuova password', name='new_password1')
                |                                     
                input.form-control.my-1(type='password', placeholder='Reinserisci la tua nuova password', name='new_password2')
                |                                     
                button.btn.btn-primary.my-1(type='submit') Salva
      |                 
      .col-md-6
        form(method='post', action='https://formspree.io/')
          .form-group
            label Modifica la descrizione del tuo profilo
            |  
            textarea(rows='4', cols='50', placeholder='Massimo 300 caratteri')  
          |                         
          button.btn.btn-primary(type='submit') Aggiorna
  |         
  .py-5
    .container
      .row
        .col-md-6
          form(method='post', action='https://formspree.io/')
            .form-group
              label Aggiungi competenza
              |                                 
              input.form-control(type='text', name='new_telephone', placeholder='Inserisci un nuovo corso')
            |                             
            button.btn.btn-primary(type='submit') Aggiungi
          |                         
          .row
            .col-md-12  
        |                     
        .col-md-6
          form(method='post', action='https://formspree.io/')
            .form-group
              label Rimuovi competenza
              |                                 
              fieldset
                input(type='checkbox', name='1', value='1')
