doctype html
head
  meta(charset='utf-8')
  |     
  meta(name='viewport', content='width=device-width, initial-scale=1')
  |     
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css', type='text/css')
  |     
  link(rel='stylesheet', href='https://pingendo.com/assets/bootstrap/bootstrap-4.0.0-beta.1.css', type='text/css')
.py-3
  .container
    .row
      .col-md-12
        .row
          .col-md-6
            p.lead.h3 #{utente.name} #{utente.surname}
            |  
            img.img-fluid.d-block.mb-3.rounded.w-75(src='../../30818238-Avatar-Profilo-maschile-uso-picture-per-il-sito-web-sociale-Vector--Archivio-Fotografico.jpg')
            |
            p.h4 Informazioni utente:
            |
            br
            |
            p.h5 Email contatto:
            |
            p.h6 #{utente.email}
            |
            br
            |
            p.h5 Competenze
              each val in utente.skills
                h6 @ #{val}
          |                     
          .col-md-6
            form(method='POST', action='/')
              .form-group
                p.lead Posizione annuncio:
                |
                iframe(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d11073.207355997665!2d11.115205435220837!3d46.06502232402544!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x16faa4cc65ceea27!2sUniversit%C3%A0+degli+Studi+di+Trento!5e0!3m2!1sit!2sit!4v1512139837631', width='400', height='300', frameborder='0', style='border:0', allowfullscreen='')
                |                                 
                .row
                  .col-md-4
                  |                                     
                  .col-md-4
                    button.btn.btn-primary(type="button" data-toggle="modal" data-target="#exampleModal") Contatta l&apos;utente

.modal(id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
  .modal-dialog(role="document")
    .modal-content
      .modal-header
        h5.modal-title(id="exampleModalLabel") Invia Richiesta
        button.close(type="button" data-dismiss="modal" aria-label="Close")
          span(aria-hidden="true") &times;
      .modal-body
        p ciao
      .modal-footer
        button.btn.btn-secondary(type="button" data-dismiss="modal") Close
        button.btn.btn-primary(type="button") Save

