doctype html
head
  style.
    #map {
      height: 200px;
      width: 100px;
      margin: 0 auto;
    }
  meta(charset='utf-8')
  |     
  meta(name='viewport', content='width=device-width, initial-scale=1')
  |     
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css', type='text/css')
  |     
  link(rel='stylesheet', href='https://pingendo.com/assets/bootstrap/bootstrap-4.0.0-beta.1.css', type='text/css')
.py-3
  .container
    .row
      .col-md-12
        .row
          .col-md-6
            form(method='post', action='/pubblico')
              .form-group
                input.form-control(type="hidden", value=utente.email, name="userpublic")
                | 
                input.form-control(type="hidden", value=recensioni, name="reviewpublic")
                | 
                button.btn.btn-primary(type="submit") #{utente.name} #{utente.surname}
            |  
            img.img-fluid.d-block.mb-3.rounded.w-75(src='../../30818238-Avatar-Profilo-maschile-uso-picture-per-il-sito-web-sociale-Vector--Archivio-Fotografico.jpg')
            |
            p.h4 Informazioni utente:
            |
            br
            |
            p.h5 Email contatto:
            |
            p.h6 #{utente.email}
            |
            br
            |
            p.h5 Competenze
              each val in utente.skills
                h6 @ #{val}
          |                     
          .col-md-6
            form(method='POST', action='/')
              .form-group
                p.lead Posizione annuncio:
                |
                #map
                |                                 
                .row
                  .col-md-4
                  |                                     
                  .col-md-4
                    button.btn.btn-primary(type="button" data-toggle="modal" data-target="#exampleModal") Contatta l&apos;utente

.modal(id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
  .modal-dialog(role="document")
    .modal-content
      .modal-header
        h5.modal-title(id="exampleModalLabel") Invia Richiesta
        button.close(type="button" data-dismiss="modal" aria-label="Close")
          span(aria-hidden="true") &times;
      .modal-body
        p ciao
      .modal-footer
        button.btn.btn-secondary(type="button" data-dismiss="modal") Close
        button.btn.btn-primary(type="button") Save

script.
  // NB la variabile pos andrà inizializzata con la posizione dell'annuncio
  var map, pos = {lat: 46.066667, lng: 11.133333};
  function initMap() {
    map = new google.maps.Map(document.getElementByID('map'), {
      center: pos,
      zoom: 15
    });
    var marker = new google.maps.Marker({
          position: pos,
          map: map
        });
  }
  // NB su style - #map andrà modificata la dimensione appena la pagina sarà in funzione

script(async defer src='https://maps.googleapis.com/maps/api/js?key=AIzaSyAyPuNc-IQgslbVyEdvq8kCrJvOQSS4Prs&callback=initMap')

