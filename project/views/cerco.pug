                              |
                              input.form-control(type='hidden' value=val.text name='anntxt')
                              |
                              input.form-control(type='hidden' value=val.subject name='ritorna')
                              |
                              button.btn.btn-primary(type='submit') Annuncio n_#{val._id}
                              
                            |                     
                            .card-body
                              h4 #{val.subject}
                              |
                              h6 Utente: #{val.email}
                              |                         
                              p.p-y-1 #{val.text}
